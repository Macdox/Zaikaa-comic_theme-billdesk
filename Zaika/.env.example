# Environment Variables Configuration Template
# ==================================================
# INSTRUCTIONS:
# 1. Copy this file: Copy-Item .env.example .env
# 2. Replace ALL placeholder values with your actual credentials
# 3. NEVER commit the .env file to version control
# ==================================================

# Django Settings
# Generate new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-new-one-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=zaikaa
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Billdesk Configuration
# Configure your Billdesk credentials here
# BILLDESK_MERCHANT_ID=your_merchant_id_here
# BILLDESK_SECRET_KEY=your_secret_key_here
# BILLDESK_CLIENT_ID=your_client_id_here

# Email Configuration
# For Gmail, generate App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
EMAIL_USE_TLS=True

# MongoDB Configuration (Optional)
# Only needed if using MongoDB features
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=zaikaa_db

# Static Files
# For development, leave empty or comment out
# For production, set to your static files directory
STATIC_ROOT=
# Production example: STATIC_ROOT=C:/inetpub/zaika/staticfiles

# Session Configuration
SESSION_COOKIE_AGE=86400
SESSION_SAVE_EVERY_REQUEST=True
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# Server Configuration (for production)
PORT=8000
HOST=0.0.0.0
WAITRESS_THREADS=4
